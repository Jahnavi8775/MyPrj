@page
@model Avrhil.IT.Website.Pages.AIChatModel
@{
    ViewData["Title"] = "Avrhil AI";
    ViewData["MetaDescription"] = "With 10 years of expertise in software development, application development, and outsourcing, Avrhil IT Service is a seasoned provider of IT services.";
    ViewData["CanonicalUrl"] = "https://avrhil.com/AIChat";
}

<style>
    .container-block {
      display: flex;
      height: 100vh;
      padding: 0;
    }

    /* Sidebar */
    .sidebar {
        position: absolute;
        height: 100vh;
        width: 250px;
        overflow-y: auto;
        min-height: 100vh;
        background-color: #fff;
        transition: left 0.3s ease-in-out;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .sidebar.open {
      left: 0; /* Show sidebar */
    }

    .sidebar .new-chat-btn {
      display: block;
      width: 100%;
            background-color: #4f2cbe;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 5px;
      text-align: center;
      cursor: pointer;
      margin-bottom: 20px;
    }

    .sidebar h3 {
      margin-bottom: 10px;
    }

    .sidebar ul {
      list-style: none;
      margin-bottom: 20px;
    }

    .sidebar ul li {
      margin: 5px 0;
      padding: 10px;
      background: #e3e3e3;
      border-radius: 5px;
      cursor: pointer;
    }

    .sidebar .settings button {
      display: block;
      width: 100%;
      background-color: #4f2cbe;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 5px;
      margin-top: 10px;
      cursor: pointer;
    }

    /* Chat Area */
    .chat-area {
      flex: 1;
      margin-left: 250px;
      display: flex;
      background: #fff;
      flex-direction: column;
      padding: 10px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }
    .chat-area .chat-container{
       height: 100%;
       padding: 20px 0px;
    }
    @@media (max-width: 768px) {
      .chat-area {
        margin-left: 0; /* No offset on smaller screens */
      }
      .sidebar{
        left: -100%; /* Hidden initially */
      }
    }

    /* Header */
    header {
        background: #fff;
        color: #fff;
        display: flex;
        align-items: center;
    }

    .toggle-sidebar-btn {
      display: none;
      background-color: #fff;
      color: #4f2cbe;
      border: none;
      border-radius: 5px;
      padding: 10px;
      font-size: 1.5rem;
      cursor: pointer;
      margin-right: 10px;
    }

    @@media (max-width: 768px) {
      .toggle-sidebar-btn {
        display: block;
      }
    }

    .search-bar {
        flex: 1;
        padding: 3px 10px;
        border: 1px solid #efefef;
        border-radius: 5px;
        font-size: 1rem;
    }
    }

    /* Chat Container */
    .chat-container {
      flex: 1;
      overflow-y: auto;
      padding: 20px;
      background: #f9f9f9;
    }

    .chat-item {
      margin-bottom: 10px;
      padding: 5px;
      border-radius: 5px;
      max-width: fit-content;
      word-wrap: break-word;
    }

    .chat-item.user {
      background: #4f2cbe;
      color: #fff;
      text-align: right;
      margin-left: auto;
    }

    .chat-item.bot {
      background: #e3e3e3;
      color: #333;
      text-align: left;
      margin-right: auto;
    }

    /* Footer */
    footer {
      display: flex;
      padding: 10px 0;
      background: #fff;
      border-top: 1px solid #efefef;
    }

    footer input {
      flex: 1;
      resize: none;
      padding: 5px;
      border: 1px solid #efefef;
      border-radius: 5px;
    }

    footer .send-btn {
      background: #4f2cbe;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 5px 20px;
      margin-left: 10px;
      cursor: pointer;
    }
    @@media only screen and (max-width: 991px) {
        .banner-style-seven {
            padding: 97px 0px 100px 0px;
        }
    }

    .anim-icons{
        position:unset;
    }
  </style>

<section class="banner-style-seven">
    <div class="anim-icons">
        <div class="icon icon-1"><img src="~/images/anim-icon-7.png" alt=""></div>
        <div class="icon icon-2 rotate-me"><img src="~/images/anim-icon-8.png" alt=""></div>
        <div class="icon icon-3 rotate-me"><img src="~/images/anim-icon-9.png" alt=""></div>
        <div class="icon icon-4 rotate-me"><img src="~/images/anim-icon-10.png" alt=""></div>
        <div class="icon icon-5 rotate-me"><img src="~/images/anim-icon-11.png" alt=""></div>
    </div>
    <div class="image-layer" style="background-image: url('@Url.Content("~/images/banner-bg-6.png")');"></div>
    <div class="container">
        <div class="row">
            <div class="container-block">
                <!-- Sidebar -->
                <aside class="sidebar">
                    <div class="section">
                        <h5>Your conversations</h5>
                       @*  <ul>
                            <li>Create HTML Game Environment...</li>
                            <li>Apply to Leave for Emergency</li>
                            <li>What Is UI/UX Design?</li>
                        </ul> *@
                    </div>
                
                </aside>

                <!-- Main Content Area -->
                <main class="chat-area">
              
                    <div class="chat-container">
                        <div id="messages">
                            @await Html.PartialAsync("_ChatMessagesPartial", Model)
                        </div>
                    </div>
                    <footer>
                        <form method="post" id="chat-form" style="width:100%">
                            <input placeholder="What's on your mind?" name="UserMessage"></input>
                        <button class="send-btn" type="submit">Send</button>
                        </form>
                    </footer>
                </main>
            </div>
        </div>
    </div>
</section>

<script>
    const form = document.getElementById('chat-form');
    form.addEventListener('submit', async (event) => {
        event.preventDefault();
       // const userMessage = textarea.value.trim();
       
        const formData = new FormData(form);
        const response = await fetch('@Url.Page("AIChat", "Post")', {
            method: 'POST',
            body: formData
        });
        const html = await response.text();
        document.getElementById('messages').innerHTML = html;
        form.reset();
    });
</script>

